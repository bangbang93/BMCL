<Grid
  x:Class="BMCLV2.Components.InputDialog"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
  xmlns:model="clr-namespace:BMCLV2.Model"
  Background="{DynamicResource MaterialDesignPaper}"
>
  <Grid.DataContext>
    <model:InputDialogModel />
  </Grid.DataContext>
  <Grid.RowDefinitions>
    <RowDefinition />
    <RowDefinition />
  </Grid.RowDefinitions>
  <Grid.ColumnDefinitions>
    <ColumnDefinition />
    <ColumnDefinition />
  </Grid.ColumnDefinitions>
  <TextBox Height="33" Width="128" TextWrapping="Wrap" Grid.Row="0" Grid.ColumnSpan="2" Text="{Binding Text}" Margin="0 10 0 0"
           KeyDown="UIElement_OnKeyDown" />
  <Button Command="{x:Static md:DialogHost.CloseDialogCommand}" Content="OK" Margin="10" Grid.Row="1" Grid.Column="0"
          CommandParameter="true" Name="BtnOk" />
  <Button Command="{x:Static md:DialogHost.CloseDialogCommand}" Content="CANCEL" Margin="10" Grid.Row="1"
          Grid.Column="1" CommandParameter="false" />
</Grid>
